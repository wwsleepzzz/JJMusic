<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zzz.shiro.jjmusic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.zzz.shiro.jjmusic.utils.BelmotPlayer"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zzz.shiro.jjmusic.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zzz.shiro.jjmusic.Main2Activity"
            android:label="@string/title_activity_main2"
            android:parentActivityName="com.zzz.shiro.jjmusic.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zzz.shiro.jjmusic.Main3Activity"
            android:label="@string/title_activity_main3"
            android:parentActivityName="com.zzz.shiro.jjmusic.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>